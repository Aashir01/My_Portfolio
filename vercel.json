{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!.*\\.(pdf|jpg|jpeg|png|gif|svg|ico|css|js)).*)$",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(pdf|jpg|jpeg|png|gif|svg|ico))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "application/octet-stream"
        }
      ]
    }
  ]
}
